{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++编译",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-std=c++17",
                "-I/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include/c++/v1",
                "-I${workspaceFolder}/include",
                "-I${workspaceFolder}/src",
                "-I/opt/homebrew/include", // GLFW头文件路径
                "-g",
                "${workspaceFolder}/src/core/glad.c", // 添加 glad.c
                "${workspaceFolder}/src/main.cpp",  // 显式包含main.cpp确保优先级
                "${workspaceFolder}/src/**/*.cpp",
                "-o",
                "${workspaceFolder}/bin/myopengl",
                "-L/opt/homebrew/lib",  // GLFW库路径
                "-lglfw",  // 链接GLFW库
                // "-framework OpenGL", // macOS 必需的 OpenGL 框架
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": true  // 启用通配符扩展

            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}